<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">

    <property name="log.dir" value="target/logs" />
    <property name="encoding" value="UTF-8" />
    <property name="plain" value="%msg%n" />
    <property name="std" value="{HH:mm:ss.SSS} [%thread] %-5level %logger{80}[%file:%line] -%X{user} %msg%n" />
    <property name="normal" value="-15d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{80}[%file:%line] -%X{user} %msg%n" />

    <property name="service.name" value="activiti6-helloworld"/>
    <property name="log.path" value="${log.dir}/${service.name:-activiti6}.log" />
    <property name="CHARSET" value="UTF-8" />

    <!--输出到控制台-->
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${plain}</pattern>
        </encoder>
    </appender>

    <!--输出到文件-->
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.path}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %contextName [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="root" level="ERROR"/>
    <logger name="com.jerry" level="DEBUG" />

    <!-- TRACE < DEBUG < INFO < WARN < ERROR -->
    <root level="ERROR">
        <appender-ref ref="stdout" />
        <appender-ref ref="file" />
    </root>

</configuration>